<%= form_for @tag, html: {class: "form-inline", role: "form"} do |f| %>

  <% if @tag.errors.any? %>
    <div class="alert alert-warning">
      <% @tag.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create New Topic', class: 'btn btn-sm' %>
  </div>

<% end %>