  <h4>Admin Actions:</h4>

  <% if @lesson.status == "open" %>
    <%= button_to "Close Registration!", {controller: "lessons", action: "update_status", id: @lesson.id, :'lesson[status]' => "closed"}, {method: :patch, class: "btn btn-warning", remote: true } %>
  <% elsif @lesson.status == "closed" %>
    <%= button_to "Open Registration!", {controller: "lessons", action: "update_status", id: @lesson.id, :'lesson[status]' => "open"}, {method: :patch, class: "btn btn-primary", remote: true } %>
  <% end %>

  <% unless @lesson.status == "completed" %>
    <%= button_to "Mark Completed", {controller: "lessons", action: "update_status", id: @lesson.id, :'lesson[status]' => "completed"}, {method: :patch, class: "btn btn-success", data: { confirm: 'This will permamently archive the lesson. Are you sure?'} } %>

      <br>
      <br>
  <% end %>

  <%= link_to 'Edit Lesson', edit_lesson_path(@lesson), { class: "btn btn-info" } %>

  <% if one_user?(@lesson) %>
    <%= link_to 'Delete Lesson!', @lesson, { method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }, remote: true } %>
  <% end %>

  <br>
  <br>

  <%= button_to "Relinquish Administration!", {controller: "registrations", action: "update", lesson_id: @lesson.id, id: @registration.id, 'registration[admin]' => "false"}, {method: :patch, class: "btn btn-warning"} %>

  <br><br>

  <form role="form" action="/lessons/<%= @lesson.id %>/admin_email" method="POST" id="admin_email">
    <%= token_tag %>
    <h4>Send an Email to All Teachers and Students:</h4>
    <div class="form-group">
      Subject: <input type="text" name="subject">
    </div>
    <div class="form-group">
      Body: <textarea name="content"></textarea>
    </div>
    <input type="submit" name="submit" value="Send Email" class="btn">
  </form>

  <br><br>

